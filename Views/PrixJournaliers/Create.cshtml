@model FuelPredictor.Models.V2.PrixJournalier

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #PrixJournaliers {
        text-decoration: underline;
    }
</style>

<h1>Create</h1>

<h4>PrixJournalier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="prix" class="control-label"></label>
                <input asp-for="prix" class="form-control" />
                <span asp-validation-for="prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                  <input type="date" asp-for="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDStation" class="control-label"></label>
                <select asp-for="IDStation" class ="form-control" asp-items="ViewBag.IDStation"></select>
            </div>
            <div class="form-group">
                <label asp-for="IDCarburant" class="control-label"></label>
                <select asp-for="IDCarburant" class ="form-control" asp-items="ViewBag.IDCarburant"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

