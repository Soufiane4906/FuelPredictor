@model IEnumerable<FuelPredictor.Models.V2.Station>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
   #Stations{
        text-decoration: underline;
       
    }
</style>

<h1 style="text-align:center;"> Liste Des Stations</h1>

<p>
    <a class="btn btn-outline-info" asp-action="Create">Create New</a>
</p>
<table class="table table-success table-striped table-hover ">
    <thead>
        <tr>
            <th>
Station
            </th>
            <th>
              Ville
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                Historique
            </th>
            <th>
                Action
            </th>
         
       @*     <th>
                @Html.DisplayNameFor(model => model.Gerant)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ville.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
            <td>
                    <a class="btn btn-outline-success" asp-controller="PrixJournaliers" asp-action="IndexStation" asp-route-id="@item.Id">Liste des prix</a>
            </td>
     @*       <td>
                @Html.DisplayFor(modelItem => item.Gerant.Id)
            </td>*@


                @if (User.IsInRole("Gerant"))
                {
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-outline-secondary" asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
        </tr>
              
}
    </tbody>
</table>
